{
  "name": "leetcode",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/justforlxz/leetcode.git",
  "author": "Zhang, DingYuan <justforlxz@gmail.com>",
  "license": "GPL-3.0-only",
  "private": false,
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.5.3",
    "jest-junit": "^12.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/typings/**"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./coverage/",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
